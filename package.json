{
  "name": "@architect-studio/cli",
  "version": "0.1.0",
  "description": "CLI for generating architecture artifacts from functional specs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "architect": "./dist/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "output/scaffold",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently --kill-others --names \"BACKEND,FRONTEND\" -c \"bgBlue,bgMagenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd output/scaffold && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:studio && npm run build:backend && npm run build:frontend",
    "build:studio": "tsc",
    "build:backend": "cd output/scaffold && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/cli.js",
    "studio:run": "tsx studio/cli.ts run",
    "studio:lint": "tsx studio/cli.ts lint",
    "studio:test": "tsx studio/cli.ts test",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "handlebars": "^4.7.8",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "keywords": ["architecture", "code-generation", "cli", "agents", "prompt-engineering"],
  "author": "Architect Studio",
  "license": "MIT"
}
